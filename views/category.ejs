<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <title>
      <%=category==="mains"?"Mains":category==="sides"?"Sides":"Desserts"%>
    </title>
    <ol>
      <h1>
        <%=category==="mains"?"Mains":category==="sides"?"Sides":"Desserts"%>
      </h1>
      <% menuItems.forEach((item,index)=>{ %>
      <h3>
        <li><%=item.name%>- $<%=item.price%> <%=item.rating===5?"⭐":""%></li>
      </h3>
      <p><em>Rating: <%=item.rating%></em></p>

      <p><%=item.details%></p>
      <%})%>
    </ol>
  </body>
</html>
